@model LIBRARYMANAGEMENTSYSTEM_MITRASO.Models.Penalty

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Penalty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PenaltyId" />
            <div class="form-group">
                <label asp-for="PenaltyName" class="control-label"></label>
                <input asp-for="PenaltyName" class="form-control" />
                <span asp-validation-for="PenaltyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PenaltyDate" class="control-label"></label>
                <input asp-for="PenaltyDate" class="form-control" />
                <span asp-validation-for="PenaltyDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSettled" /> @Html.DisplayNameFor(model => model.IsSettled)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="BorrowingRecordsId" class="control-label"></label>
                <input asp-for="BorrowingRecordsId" class="form-control" />
                <span asp-validation-for="BorrowingRecordsId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasPenalty" /> @Html.DisplayNameFor(model => model.HasPenalty)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
