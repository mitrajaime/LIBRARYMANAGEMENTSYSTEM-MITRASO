@model LIBRARYMANAGEMENTSYSTEM_MITRASO.Models.BorrowingRecords

@{
    ViewData["Title"] = "Return Book"; 
}

<h1>Return</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Return">
            <input type="hidden" asp-for="BorrowingRecordsId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookId" asp-items="ViewBag.BookId" />
            <input type="hidden" asp-for="BorrowerId" class="form-control" asp-items="ViewBag.BorrowerId" />
            <input type="hidden" asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" />
            <input type="hidden" asp-for="HasPenalty" class="form-check-input" />
            <input type="hidden" asp-for="DateBorrowed" class="form-control" />
            <!--<input type="hidden" asp-for="BookCategoryId" class="form-control" asp-items="ViewBag.BookCategoryId" />-->
            <input type="hidden" asp-for="DueDate" class="form-control"/>
            <input type="hidden" asp-for="ReturnDate" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Confirm?" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

